<UserControl x:Class="AIUnittestExtension.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIUnittestExtension"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="LoadingText" Text="Processing..." HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar Name="LoadingBar" Width="250" Height="20" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</UserControl>
